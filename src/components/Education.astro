---
import { SectionTitle } from "./UI";

const timeline = [
    {
        date: "2022 — 2024",
        title: "MSCS",
        company: "San Jose State University",
        location: "San Jose, CA",
        bullets: [
            "Focused on ML/NLP; coursework: Machine Learning, Deep Learning, Information Retrieval, Distributed Systems.",
            "Built Poli NLP Classifier (BERT/GPT-2/LSTM) with Flask API & React UI; deployed on Heroku/Vercel.",
            "Developed XAI-Emotion: audio → arousal prediction with scikit-learn; SHAP explanations & EDA pipeline.",
            "Capstone: reinforcement learning for network optimization with explainability; experiment tracking & evaluation."
        ],
        tags: ["Python", "PyTorch", "Transformers", "scikit-learn", "NLP", "ML"]
    },
    {
        date: "2024 Summer",
        title: "Visiting Grad",
        company: "Stanford University",
        location: "Palo Alto, CA",
        bullets: [
            "DATASCI 112 — Principles of Data Science: Applied statistical methods for EDA and visualization.",
            "CS193C — Client-Side Internet Technologies: Built interactive web apps with modern JavaScript and DOM/Web APIs.",
            "ME334S — High Performance Computing for AI: Seminar discussions with industry leaders; analytical reflections on HPC & AI trends."
        ],
        tags: ["Data Science", "Statistics", "Visualization", "JavaScript", "Web", "HPC", "AI"]
    },
    {
        date: "2018 — 2020",
        title: "BSCS",
        company: "San Jose State University",
        location: "San Jose, CA",
        bullets: [
            "Completed core CS coursework: Data Structures & Algorithms, Operating Systems, Databases, and Networks.",
            "Built full-stack projects (React + Node/Flask) with REST APIs, authentication, and deployment.",
            "Applied Git/GitHub workflows with code reviews and CI; collaborated in Agile teams.",
            "Implemented classic algorithms and solved N+ coding problems to strengthen problem-solving skills."
        ],
        tags: ["Java", "Python", "JavaScript", "React", "Node.js", "SQL", "NoSQL", "Flask", "Git"]
    },
    {
        date: "2016 — 2018",
        title: "Transfer-track General Education",
        company: "Foothill College",
        location: "Los Altos , CA",
        bullets: [
        "Completed transfer-track general education with CS foundation courses (Intro to Programming in Java, Data Structures).",
        "Math core: Calculus I–III, Linear Algebra, Discrete Math; Statistics for data analysis.",
        "Built introductory projects and practiced Git workflows.",
        "Strengthened academic writing and public speaking through communication courses."
        ],
        tags: ["Java", "Data Structures", "Discrete Math", "Calculus", "Statistics", "Git"]
    },
];
---

<section id="education" class="w-full px-6 py-4 pt-14 bg-background">
  <SectionTitle
    title="Education"
    color="secondary"
    className="flex flex-col justify-center"
  >
    <div class="flex_center flex-col lg:flex-row w-full h-full py-10 gap-8">
        <!-- timeline -->
        <div class="Fade_Up w-full lg:w-[60%] relative pl-6">
            <!-- 轴线 -->
            <div class="absolute left-0 top-0 bottom-0 w-px bg-primary/30"></div>

                <div class="space-y-8">
                {timeline.map((item) => (
                    <div class="grid gap-2 md:grid-cols-[10rem,1fr]">
                    <!-- 日期 -->
                    <div class="text-left md:text-right md:pr-4">
                        <time class="font-mono text-sm opacity-70">{item.date}</time>
                    </div>

                    <!-- 内容 -->
                    <div class="relative">
                        <!-- 圆点 -->
                        <span class="absolute -left-[calc(0.5rem+6px)] top-1.5 block h-3 w-3 rounded-full bg-primary ring-4 ring-background"></span>

                        <h3 class="text-lg font-semibold">
                            {item.title} · <span class="text-primary">{item.company}</span>
                        </h3>
                        <p class="text-sm opacity-70">{item.location}</p>

                        <ul class="mt-2 list-disc pl-5 space-y-1">
                            {item.bullets.map((b) => <li>{b}</li>)}
                        </ul>

                        {item.tags?.length && (
                        <div class="mt-3 flex flex-wrap gap-2">
                            {item.tags.map((t) => (
                            <span class="rounded-full border px-2 py-0.5 text-xs opacity-80">{t}</span>
                            ))}
                        </div>
                        )}
                    </div>
                </div>
                ))}
            </div>
        </div>
    </div>
  </SectionTitle>
</section>
