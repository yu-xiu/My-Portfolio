---
import { Image } from "astro:assets";
import {
    GithubIcon,
    LinkedinIcon,
} from "../assets/SVGs";
import { SubCenterTitle } from "./UI"

const currentYear = new Date().getFullYear();

import { VISITOR_ID } from "../../config/visitorId.js";
const badgeUrl = `https://visitor-badge.laobi.icu/badge?page_id=${VISITOR_ID}`;
const isProd = import.meta.env.MODE === "production";
---

<SubCenterTitle title="T" color="primary" class="text-sm"/>
<footer
    class="relative bottom-0 w-full h-[25vh] flex justify-between items-center flex-col px-4 py-8 bg-footer"
>
    
    <div class="flex justify-center gap-10">
        <a href="https://www.linkedin.com/in/yu-xiu/" target="_blank" rel="noreferrer">
            <Image src={LinkedinIcon} alt="linkedin" width={30} height={30} />
        </a>
        <a href="https://github.com/yu-xiu" target="_blank" rel="noreferrer">
            <Image src={GithubIcon} alt="github" width={30} height={30} />
        </a>
    </div>

    
    <p>
        Â© 2025-{new Date().getFullYear()} Tiffany Xiu
    </p>
    <p class="text-xs text-gray-400 mt-1">
        Template adapted from <a href="https://github.com/ChiragChrg/portfolio" target="_blank" rel="noopener noreferrer">
            ChiragChrg
        </a> (MIT License)
    </p>

    <!-- Visitor counter ID is stored in config/visitorId.js (ignored by git).
     Please create your own file with a unique ID if you fork this repo. -->
    
    {isProd && (
        <img src={badgeUrl} alt="visitors" />
    )}
</footer>
