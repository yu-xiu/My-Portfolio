---
import { CenterTitle, SkillTitle, SkillGrid, SubCenterTitle, SectionTitle} from "./UI";

const timeline = [
    {
        date: "2025 — Present",
        title: "Software Engineer",
        company: "Stealth Startup",
        location: "Bay Area, CA",
        bullets: [
            "Built NLP + RL prototypes; shipped full-stack demos",
        ],
        tags: ["NLP", "RL", "Full-stack"]
    },

    {
        date: "2023 — 2024",
        title: "Software Engineering Intern",
        company: "NASA Ames",
        location: "Mountain View, CA",
        bullets: [
            "Simulink, Stateflow, and Matlab spacecraft models & testing",
        ],
        tags: ["Simulink", "MATLAB", "Stateflow"]
    },
    {
        date: "2023 — 2023",
        title: "Math Tutor",
        company: "Math Culture LLC",
        location: "Los Altos, CA",
        bullets: [
            "Teaching Math Kangaroo competition mathlete class at Santa Rita elementary school.",
        ],
        tags: ["Algebra"]
    },
    {
        date: "2017 — 2018",
        title: "Math Tutor",
        company: "Foothill College",
        location: "Los Altos, CA",
        bullets: [
            "Provided individualized Calculus tutoring to college students.", 
            "Offered personalized feedback and guidance.", 
            "Successfully helped students improve their performance.", 
            "Resulting in enhanced understanding and mastery of Calculus concepts."
        ],
        tags: ["Algebra", "Trignometry", "Calculus"]
    },
];
---

<section id="experience" class="w-full px-6 py-4 pt-14 bg-background">
  <SectionTitle
    title="Work Experience"
    color="secondary"
    className="flex flex-col justify-center"
  >
  
    <div class="flex_center flex-col lg:flex-row w-full h-full py-10 gap-8">
        <!-- timeline -->
        <div class="Fade_Up w-full lg:w-[60%] relative pl-6">
            <!-- 轴线 -->
            <div class="absolute left-0 top-0 bottom-0 w-px bg-primary/30"></div>

                <div class="space-y-8">
                {timeline.map((item) => (
                    <div class="grid gap-2 md:grid-cols-[10rem,1fr]">
                    <!-- 日期 -->
                    <div class="text-left md:text-right md:pr-4">
                        <time class="font-mono text-sm opacity-70">{item.date}</time>
                    </div>

                    <!-- 内容 -->
                    <div class="relative">
                        <!-- 圆点 -->
                        <span class="absolute -left-[calc(0.5rem+6px)] top-1.5 block h-3 w-3 rounded-full bg-primary ring-4 ring-background"></span>

                        <h3 class="text-lg font-semibold">
                            {item.title} · <span class="text-primary">{item.company}</span>
                        </h3>
                        <p class="text-sm opacity-70">{item.location}</p>

                        <ul class="mt-2 list-disc pl-5 space-y-1">
                            {item.bullets.map((b) => <li>{b}</li>)}
                        </ul>

                        {item.tags?.length && (
                        <div class="mt-3 flex flex-wrap gap-2">
                            {item.tags.map((t) => (
                            <span class="rounded-full border px-2 py-0.5 text-xs opacity-80">{t}</span>
                            ))}
                        </div>
                        )}
                    </div>
                </div>
                ))}
            </div>
        </div>
    </div>
  </SectionTitle>
</section>
